# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true


[*.ts]
# Enforce a maximum line length of 80 characters
max_line_length = 140

# TypeScript-specific settings
# Use single quotes for string literals
quote_type = single

# Enforce a space before and after an arrow function's arrow
arrow_function_space = always

# Enforce a space after a TypeScript type assertion
type_assertion_space = one

# Enforce a space after a colon in TypeScript type annotations
type_annotation_space = always

# Enforce a space before and after operators
space_around_operators = true
